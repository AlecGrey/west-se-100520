<h2>Doctor details</h2>

<h2><%= @doctor.name %> - <%= @doctor.specialty %></h2>

<h3>Appointments</h3>
<ul>
<% @doctor.appointments.each do |app| %>
    <li>Time: <%= app.time %> / Patient: <%= app.patient.name %> / Condition: <%= app.patient.condition %></li>
<% end %>
</ul>

<button><%= link_to "Edit doc", edit_doctor_path %></button>
<%= button_to "Delete", @doctor, method: :delete, data: {confirm: "Are you sure?"} %>
<button><%= link_to "Home", doctors_path %></button>