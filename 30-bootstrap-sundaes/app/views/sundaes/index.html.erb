<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Sundaes!</h1>
    <p class="lead">There are as many sundae possibilities as you can dream of!</p>
  </div>
</div>

<% @sundaes.each do |sundae| %>
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title"><%= sundae.flavor %></h5>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Topping: <%= sundae.topping %></li>
            <li class="list-group-item">Scoops: <%= sundae.scoops %></li>
        </ul>   
    </div>
<% end %>